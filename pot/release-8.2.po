msgstr ""

#: /tmp/cicero-RKYt/release-8.2.xml:4686(para) 
msgid "Add <link linkend=\"guc-archive-timeout\"><varname>archive_timeout</varname></link> to force transaction log file switches at a given interval (Simon)"
msgstr ""

#: /tmp/cicero-RKYt/release-8.2.xml:4692(para) 
msgid "This enforces a maximum replication delay for warm standby servers."
msgstr ""

#: /tmp/cicero-RKYt/release-8.2.xml:4698(para) 
