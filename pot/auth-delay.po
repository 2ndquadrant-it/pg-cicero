#: /tmp/cicero-gBbq/auth-delay.xml:37(para) 
msgid "The number of milliseconds to wait before reporting an authentication failure. The default is 0."
msgstr ""

#: /tmp/cicero-gBbq/auth-delay.xml:45(para) 
msgid "In order to set these parameters in your <filename>postgresql.conf</filename> file, you will need to add <literal>auth_delay</literal> to <xref linkend=\"guc-custom-variable-classes\"/>. Typical usage might be:"
msgstr ""

#: /tmp/cicero-gBbq/auth-delay.xml:51(programlisting) 
#, no-wrap
msgid "\n# postgresql.conf\nshared_preload_libraries = 'auth_delay'\n\ncustom_variable_classes = 'auth_delay'\nauth_delay.milliseconds = '500'\n"
msgstr ""

