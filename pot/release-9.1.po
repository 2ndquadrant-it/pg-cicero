msgstr ""

#: /tmp/cicero-EpGA/release-9.1.xml:1421(para) 
msgid "This allows the encoding of the <command>COPY</command> file to be specified separately from client encoding."
msgstr ""

#: /tmp/cicero-EpGA/release-9.1.xml:1428(para) 
msgid "Add bidirectional <link linkend=\"sql-copy\"><command>COPY</command></link> protocol support (Fujii Masao)"
msgstr ""

#: /tmp/cicero-EpGA/release-9.1.xml:1433(para) 
msgid "This is currently only used by streaming replication."
msgstr ""

#: /tmp/cicero-EpGA/release-9.1.xml:1443(command) 
msgid "EXPLAIN"
msgstr ""

#: /tmp/cicero-EpGA/release-9.1.xml:1448(para) 
msgid "Make <command>EXPLAIN VERBOSE</command> show the function call expression in a <literal>FunctionScan</literal> node (Tom Lane)"
