#: /tmp/cicero-POVb/sql.xml:1119(replaceable) 
msgid "search condition"
msgstr ""

#: /tmp/cicero-POVb/sql.xml:1119(arg) 
msgid "ON <placeholder-1/>"
msgstr ""

#: /tmp/cicero-POVb/sql.xml:1120(replaceable) 
msgid "join column list"
msgstr ""

