#, no-wrap
msgid "\nSELECT S.SNO, S.SNAME, S.CITY\n    FROM SUPPLIER S\n    WHERE S.SNAME = 'Jones'\nUNION\n    SELECT S.SNO, S.SNAME, S.CITY\n    FROM SUPPLIER S\n    WHERE S.SNAME = 'Adams';\n"
msgstr ""

#: /tmp/cicero-POVb/sql.xml:1589(para) 
msgid "The following query is an example for UNION: <placeholder-1/> gives the result: <screen>\n SNO | SNAME |  CITY\n-----+-------+--------\n  2  | Jones | Paris\n  3  | Adams | Vienna\n</screen>"
