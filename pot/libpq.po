msgid "dbname"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:212(para)
msgid "The database name. Defaults to be the same as the user name."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:219(literal)
msgid "user"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:221(para)
msgid "<productname>PostgreSQL</productname> user name to connect as. Defaults to be the same as the operating system name of the user running the application."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:230(literal)
msgid "password"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:232(para)
msgid "Password to be used if the server demands password authentication."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:239(literal)
msgid "connect_timeout"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:241(para)
msgid "Maximum wait for connection, in seconds (write as a decimal integer string). Zero or not specified means wait indefinitely. It is not recommended to use a timeout of less than 2 seconds."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:250(literal)
msgid "options"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:252(para)
msgid "Adds command-line options to send to the server at run-time. For example, setting this to <literal>-c geqo=off</literal> sets the session's value of the <varname>geqo</varname> parameter to <literal>off</literal>. For a detailed discussion of the available options, consult <xref linkend=\"runtime-config\"/>."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:263(literal)
msgid "application_name"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:265(para)
msgid "Specifies a value for the <xref linkend=\"guc-application-name\"/> configuration parameter."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:273(literal)
msgid "fallback_application_name"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:275(para)
msgid "Specifies a fallback value for the <xref linkend=\"guc-application-name\"/> configuration parameter. This value will be used if no value has been given for <literal>application_name</literal> via a connection parameter or the <envar>PGAPPNAME</envar> environment variable. Specifying a fallback name is useful in generic utility programs that wish to set a default application name but allow it to be overridden by the user."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:289(literal)
msgid "keepalives"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:291(para)
msgid "Controls whether client-side TCP keepalives are used. The default value is 1, meaning on, but you can change this to 0, meaning off, if keepalives are not wanted. This parameter is ignored for connections made via a Unix-domain socket."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:301(literal)
msgid "keepalives_idle"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:303(para)
msgid "Controls the number of seconds of inactivity after which TCP should send a keepalive message to the server. A value of zero uses the system default. This parameter is ignored for connections made via a Unix-domain socket, or if keepalives are disabled. It is only supported on systems where the <symbol>TCP_KEEPIDLE</symbol> or <symbol>TCP_KEEPALIVE</symbol> socket option is available, and on Windows; on other systems, it has no effect."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:316(literal)
msgid "keepalives_interval"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:318(para)
msgid "Controls the number of seconds after which a TCP keepalive message that is not acknowledged by the server should be retransmitted. A value of zero uses the system default. This parameter is ignored for connections made via a Unix-domain socket, or if keepalives are disabled. It is only supported on systems where the <symbol>TCP_KEEPINTVL</symbol> socket option is available, and on Windows; on other systems, it has no effect."
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:331(literal)
msgid "keepalives_count"
msgstr ""

#: /home/carloratm/progetti/postgresql-source/doc-9.0.4/libpq.xml:333(para)
msgid "Controls the number of TCP keepalives that can be lost before the client's connection to the server is considered dead. A value of zero uses the system default. This parameter is ignored for connections made via a Unix-domain socket, or if keepalives are disabled. It is only supported on systems where the <symbol>TCP_KEEPINTVL</symbol> socket option is available; on other systems, it has no effect."
msgstr ""

