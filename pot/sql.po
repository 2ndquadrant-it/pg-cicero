#: /tmp/cicero-POVb/sql.xml:1639(programlisting) 
#, no-wrap
msgid "\nSELECT S.SNO, S.SNAME, S.CITY\n    FROM SUPPLIER S\n    WHERE S.SNO &gt; 1\nEXCEPT\n    SELECT S.SNO, S.SNAME, S.CITY\n    FROM SUPPLIER S\n    WHERE S.SNO &gt; 3;\n"
msgstr ""

#: /tmp/cicero-POVb/sql.xml:1636(para) 
msgid "Finally an example for EXCEPT: <placeholder-1/> gives the result: <screen>\n SNO | SNAME |  CITY\n-----+-------+--------\n  2  | Jones | Paris\n  3  | Adams | Vienna\n</screen>"
